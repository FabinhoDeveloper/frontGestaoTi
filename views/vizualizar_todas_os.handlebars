<div class="container mt-4">
    <h1>OS's registradas</h1>
    <div class="row">
        {{#each ordensDeServico}}
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    {{this.titulo}}
                </div>
                <div class="card-body">
                    <p class="card-text">{{this.descricao}}</p>
                    <p class="card-text"><strong>Status:</strong> {{this.status_os}}</p>
                    {{#if this.tecnico.nome}}
                        <p class="mt-2"><strong>Técnico:</strong> {{this.tecnico.nome}}</p>
                    {{else}}
                        <p class="mt-2"><strong>Técnico:</strong> Não atribuída</p>
                    {{/if}}
                    <p><strong>Data:</strong> {{formatarData this.data_criacao}}</p>
                    <p><strong>Requerente:</strong> {{this.usuario.nome}}</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    {{#if @root.isAdmin}}
                        <a href="/os/{{this.id}}" class="btn btn-sm btn-primary">Atribuir</a>
                    {{/if}}
                    <a href="/os/concluir/{{this.id}}" class="btn btn-sm btn-danger">Cancelar</a>
                    <a href="/os/concluir/{{this.id}}" class="btn btn-sm btn-success">Concluir</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const alertElement = document.getElementById('auto-hide-alert');
        if (alertElement) {
            setTimeout(() => {
                alertElement.remove(); // Remove o elemento do DOM
            }, 4000); // Tempo em milissegundos (4 segundos)
        }
    });
</script>
