<div class="container mt-4">
    {{#if alert}}
        <div id="auto-hide-alert" class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> Usuário cadastrado com sucesso!
        </div>
    {{/if}}
    <div class="container mt-4">
        <h1>Gerenciar Usuários</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <!-- Exemplo de linha de usuário -->
                <tr>
                    <td>João Silva</td>
                    <td>joao.silva@example.com</td>
                    <td>
                        <a href="/admin/editar/1" class="btn btn-primary btn-edit">Editar</a>
                        <a href="/admin/excluir/1" class="btn btn-danger btn-delete">Excluir</a>
                    </td>
                </tr>
                <!-- Adicione mais linhas aqui -->
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const alertElement = document.getElementById('auto-hide-alert');
        if (alertElement) {
            setTimeout(() => {
                alertElement.remove(); // Remove o elemento do DOM
            }, 4000); // Tempo em milissegundos (4 segundos)
        }
    });
</script>
