<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Cadastrar Nova OS</h5>
                </div>
                <div class="card-body">
                    <form action="/cadastrar/os" method="POST">
                        <div class="form-group">
                            <label for="descricao">Descrição</label>
                            <textarea id="descricao" name="descricao" class="form-control" rows="4" placeholder="Digite a descrição da OS..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success mt-3">Cadastrar OS</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
